---
import type { HTMLAttributes } from "astro/types";
interface Props {
  class?: string;
  props?: HTMLAttributes<"h1">;
}

const { class: classList, props } = Astro.props;
---

<h3 class:list={["block-title", classList]} {...props}><slot /></h3>

<style is:global lang="scss">
  @import "../../assets/styles/_vars.scss";

  .block-title {
    font-size: 8rem;
    font-weight: 600;
    line-height: 110%; /* 8.8rem */
    text-transform: uppercase;
  }
</style>
