---
interface Props {
  as?: astroHTML.JSX.IntrinsicElements;
  theme?: "stroke";
  size?: "sm";
  color?: "white";
  className?: string;
}

const {
  as: Wrapper = "button",
  theme,
  size,
  color,
  className,
  ...rest
} = Astro.props;
---

<Wrapper {...rest} class:list={["default-btn", theme, size, color, className]}>
  <slot />
</Wrapper>
